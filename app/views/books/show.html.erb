<!-- books#show -->

<div class="container contents-wrapper">
	<h1>id: <%= @book.id %> の人となりBook詳細ページ</h1>

  <hr/>
	<!-- bookblockを使って本デザイン表示-->
		<div class="bb-custom-wrapper">
			<div id="bb-bookblock" class="bb-bookblock">
	      <% @book.base_periods.order(:id).each do |base_period| %>
	        <div class="bb-item">
	          <h2><%= base_period.name %></h2>
	          <p><%= base_period.content %></p>
				  </div>
	        <% base_period.whole_answers.each do |whole_answer| %>
	          <% whole_answer.detailed_answers.each do |detailed_answer| %>
	            <div class="bb-item">
	              <ul>
	                <li><%= detailed_answer.detailed_question.content %></li>
	                <li><%= base_period.name %></li>
	                <li><%= detailed_answer.content %></li>
	              </ul>
				      </div>
	          <% end %>
	        <% end %>
	      <% end %>
			</div>
			
			<nav>
				<a id="bb-nav-first" href="#" class="bb-custom-icon bb-custom-icon-first">First page</a>
				<a id="bb-nav-prev" href="#" class="bb-custom-icon bb-custom-icon-arrow-left">Previous</a>
				<a id="bb-nav-next" href="#" class="bb-custom-icon bb-custom-icon-arrow-right">Next</a>
				<a id="bb-nav-last" href="#" class="bb-custom-icon bb-custom-icon-last">Last page</a>
			</nav>
			
		</div>
	
	<p><%= @book.name %></p>
	<img class="media-object img-rounded" src="<%= @book.book_photo %>" alt="">
	
	<%= link_to 'TOPに戻る', root_url %>
	<%= link_to 'このBookを編集する', edit_book_path(@book) %>
</div>